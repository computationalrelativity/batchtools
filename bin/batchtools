#!/usr/bin/env python

import os
import sys
sys.path.append(os.path.split(os.path.abspath(os.path.dirname(__file__)))[0])

import batchtools

if len(sys.argv) < 2:
    batchtools.comdict['help'].run([])
    exit(0)

if batchtools.comdict.has_key(sys.argv[1]):
    batchtools.comdict[sys.argv[1]].run(sys.argv[2:])
else:
    print("batchtools: unknown command \'" + sys.argv[1] + "\'")
    exit(1)
